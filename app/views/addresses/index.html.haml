    .mypage__flex__right__address
      .mypage__flex__right__address__top
        発送元・お届け先住所変更
      .mypage__flex__right__address__main
        = form_with do |f|
          .address__form
            .address__form__top
              %p.address__form__group__label お名前
              = f.text_field :family_name, placeholder: "例）山田"
              = f.text_field :last_name, placeholder: "例）彩"
            .address__form__group
              %p.address__form__group__label お名前カナ
              = f.text_field :j_family_name, placeholder: "例）ヤマダ"
              = f.text_field :j_last_name, placeholder: "例）アヤ"
            .address__form__content
              %p.address__form__content__label 郵便番号
              = f.text_field :postal_code, placeholder: "例）123-4567"
            .address__form__content
              %p.address__form__content__label 都道府県
              = f.select:prefectures, ["北海道", "東京"]
              = icon('fas', 'chevron-down address__form__content__icon')
            
            .address__form__content
              %p.address__form__content__label 市区町村
              = f.text_field :municipalities, placeholder: "例）横浜市緑区"
            .address__form__content
              %p.address__form__content__label 番地
              = f.text_field :address, placeholder: "例）青山1-1-1"
            .address__form__content
              %p.address__form__content__option 建物名
              = f.text_field :building, placeholder: "例）柳ビル103"
            .address__form__content
              %p.address__form__content__option 電話
              = f.text_field :phone_number, placeholder: "例）09012345678"
              =f.submit "変更する", class: "address-edit-btn" 